<!--pages/function/function.wxml-->
<view id="_all">
  <view class="_view" wx:for="{{functions}}" wx:key="index">
    <!-- 功能提示栏 -->
    <view class="_tip" style="display: flex;">
        <view style="height: 40rpx;width: 10rpx;background-color: chartreuse;margin-left: 9rpx;margin-top: 10rpx;"></view>
        <text style="margin-top: 10rpx;margin-left: 10rpx;">{{item.classifyname}}</text>
    </view>
    <!-- 具体各个功能 -->
    <view style="width: 100%;height: 140rpx;display:flex">
      <view class="style2" wx:for="{{item.datalist}}" wx:key="index" wxfor-index="childindex" bindtap="getevent{{item.id}}">
        <view>
          <image src="{{item.src}}" class="_image" mode="widthFix"></image>
          <view style="font-size: smaller;margin-left: 10%;width: 120rpx;text-align: center;">{{item.name}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
